{
  "name": "react-webpack-boilerplate",
  "version": "0.0.1",
  "description": "Minimalistic ES6 React boilerplate",
  "main": "index.js",
  "scripts": {
    "prestart": "npm run production",
    "start": "webpack-dev-server --colors",
    "production": "webpack --config webpack.production.config.js --progress --profile --colors",
    "lint": "eslint app",
    "test": "jest",
    "precommit": "cross-env npm run lint && npm test",
    "prepush": "cross-env npm run lint && npm test",
    "watch": "webpack --watch --color"
  },
  "author": "Dmitriy Chernyshov <dmitriy.chernyshof@gmail.com>",
  "license": "MIT",
  "jest": {
    "modulePaths": [
      "app"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "^@components$": "<rootDir>/app/components/index.js",
      "^@reducers$": "<rootDir>/app/reducers",
      "^@actions$": "<rootDir>/app/actions",
      "^@config$": "<rootDir>/app/config",
      "^@store$": "<rootDir>/app/store",
      "^@utils$": "<rootDir>/app/utils",
      "^@sagas$": "<rootDir>/app/sagas"
    }
  },
  "dependencies": {
    "axios": "^0.16.1",
    "babel-polyfill": "^6.26.0",
    "bootstrap": "4.0.0-alpha.6",
    "cross-env": "5.0.5",
    "font-awesome": "^4.7.0",
    "history": "^4.7.2",
    "jquery": "^3.2.1",
    "lodash": "^4.17.4",
    "md5": "^2.2.1",
    "moment": "^2.18.1",
    "phoenix": "^1.3.0",
    "prop-types": "^15.5.10",
    "react": "15.6.1",
    "react-document-title": "^2.0.3",
    "react-dom": "15.6.1",
    "react-hot-loader": "3.0.0-beta.6",
    "react-notification-system": "^0.2.15",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "4.2.2",
    "react-router-redux": "5.0.0-alpha.6",
    "redux": "^3.6.0",
    "redux-form": "^7.0.3",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.15.6"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "7.1.2",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-react-boilerplate": "1.1.1",
    "babel-preset-react-hmre": "1.1.1",
    "babel-preset-stage-2": "6.24.1",
    "copy-webpack-plugin": "4.0.1",
    "css-loader": "0.28.7",
    "enzyme": "2.9.1",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "15.1.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-flowtype": "^2.33.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.3.0",
    "extract-text-webpack-plugin": "3.0.0",
    "file-loader": "0.11.2",
    "flow-bin": "^0.54.0",
    "html-webpack-plugin": "2.30.1",
    "husky": "0.14.3",
    "jest": "^20.0.3",
    "node-sass": "4.5.3",
    "open-browser-webpack-plugin": "0.0.5",
    "postcss-loader": "2.0.6",
    "react-addons-test-utils": "15.6.0",
    "react-test-renderer": "^15.5.4",
    "sass-loader": "6.0.6",
    "style-loader": "0.18.2",
    "url-loader": "0.5.9",
    "webpack": "3.5.5",
    "webpack-dev-server": "2.7.1"
  }
}
